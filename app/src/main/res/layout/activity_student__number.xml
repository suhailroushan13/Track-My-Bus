<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Student_Number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finallogin"
    tools:context=".Student_Number">


    <!--    <com.google.android.material.textfield.TextInputLayout-->
    <!--        android:id="@+id/verifycode_btn"-->
    <!--        android:layout_width="443dp"-->
    <!--        android:layout_height="331dp"-->
    <!--        app:errorEnabled="true"-->
    <!--        tools:ignore="MissingConstraints"-->
    <!--        tools:layout_editor_absoluteX="-16dp"-->
    <!--        tools:layout_editor_absoluteY="-11dp">-->

    <!--    </com.google.android.material.textfield.TextInputLayout>-->


    <TextView
        android:id="@+id/textView2s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/medium"
        android:gravity="center"


        android:text="Let's Verify You"
        android:textColor="#FFFFFF"
        android:textSize="40sp"

        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/medium"
        android:text="@string/otp_verification"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.604" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/verifylay"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/mobile_number"

        android:textColorHint="#AAAAAA"
        app:boxCornerRadiusBottomEnd="15dp"

        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxStrokeColor="@color/maincolor"
        app:helperTextTextColor="#676C6C"
        app:hintEnabled="true"
        app:hintTextColor="#676C6C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="0dp"


            android:layout_marginRight="0dp"
            android:ems="10"

            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_codebtn"
        android:layout_width="214dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:text="@string/get_otp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifylay"
        app:layout_constraintVertical_bias="0.154"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp"
         />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:layout_marginBottom="128dp"
        android:fontFamily="@font/medium"

        android:gravity="center"
        android:text="@string/or_you_can_login_with"
        android:textColor="#939393"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/verifylay"
        app:layout_constraintVertical_bias="0.614" />

    <ImageButton
        android:id="@+id/loginwithgoogle"
        android:layout_width="265dp"
        android:layout_height="61dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/google"
        android:fontFamily="@font/medium"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:soundEffectsEnabled="true"
        android:text="Sign Up Via Google"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.966"
        tools:ignore="HardcodedText"
        tools:targetApi="p" />


</androidx.constraintlayout.widget.ConstraintLayout>