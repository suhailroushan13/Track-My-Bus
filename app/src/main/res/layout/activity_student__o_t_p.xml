<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enterotp"
    tools:context=".Student_OTP">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:alpha="0.5"

        android:layout_marginTop="98dp"
        android:background="@drawable/small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifycode_btn"
        app:layout_constraintVertical_bias="1.0">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"

        android:layout_marginTop="98dp"
        android:background="@drawable/small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifycode_btn"
        app:layout_constraintVertical_bias="1.0">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:alpha="0.5"

        android:layout_marginTop="98dp"
        android:background="@drawable/small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifycode_btn"
        app:layout_constraintVertical_bias="1.0">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="@string/enter_the_6_digit_otp"
        android:textColor="@color/black"
        android:textSize="30sp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifycode_btn"
        android:layout_width="234dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-9dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/medium"


        android:shadowColor="@color/black"

        android:text="@string/verifyS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.872"
        app:strokeColor="@color/white"
        app:strokeWidth="4dp" />

    <TextView
        android:id="@+id/callbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"



        android:layout_marginBottom="113dp"
        android:gravity="center"
        android:text="@string/didn_t_recieve_code_"
        android:textAllCaps="false"
        android:textColor="@color/black"

        android:textSize="16sp"
        app:iconTint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/verifycode_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_code_edit"
        app:strokeColor="@color/white" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/resend"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginEnd="16dp"

        android:clickable="true"
        android:focusable="true"
        android:shadowColor="@color/black"
        android:text="@string/resend"

        android:textColor="@color/maincolor"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:iconTint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/verifycode_btn"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_code_edit"
        app:strokeColor="@color/maincolor"
        app:strokeWidth="1dp"
        tools:text="Resend (59 s )"
        android:layout_marginRight="16dp" />

    <com.chaos.view.PinView
        android:id="@+id/verify_code_edit"
        style="@style/PinWidget.PinView"
        android:layout_width="347dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:cursorVisible="true"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/maincolor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cursorColor="@color/maincolor"
        app:cursorWidth="2dp"
        app:hideLineWhenFilled="true"
        app:itemCount="6"
        app:itemHeight="48dp"
        app:itemRadius="15dp"
        app:itemSpacing="5dp"
        app:itemWidth="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61"
        app:lineColor="@color/maincolor"
        app:lineWidth="2dp"
        app:viewType="rectangle" />


</androidx.constraintlayout.widget.ConstraintLayout>