<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enterotp"
    tools:context=".Student_OTP">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifycode_btn"
        android:layout_width="234dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:shadowRadius="@integer/super_bottom_expanded_behaviour"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/medium"
        android:shadowColor="@color/black"
        android:text="@string/verifyS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="213dp"
        android:layout_height="43dp"
        android:layout_below="@+id/verify_code_edit"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_toStartOf="@id/resend"
        android:layout_toLeftOf="@id/resend"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="@string/didn_t_recieve_code"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <com.chaos.view.PinView
        android:id="@+id/verify_code_edit"
        style="@style/PinWidget.PinView"
        android:layout_width="325dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:autofillHints=""
        android:ems="6"
        android:inputType="number"
        android:maxLength="6"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:itemCount="6"
        app:itemHeight="48dp"
        app:itemRadius="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625"
        app:lineColor="#03A9F4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resend"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"


        android:fontFamily="@font/bold"

        android:gravity="center"
        android:text="@string/resend"
        android:textAllCaps="false"
        android:textColor="@color/maincolor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/verifycode_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/verify_code_edit"
        app:layout_constraintVertical_bias="0.293" />

</androidx.constraintlayout.widget.ConstraintLayout>