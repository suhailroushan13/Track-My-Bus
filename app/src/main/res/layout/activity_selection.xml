<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Selection">


    <ImageView
        android:id="@+id/imageView3ss"
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:background="#808080"
        app:layout_constraintBottom_toTopOf="@+id/dlogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slogin"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_marginStart="244dp"
        android:layout_marginLeft="244dp"
        android:background="#808080"
        app:layout_constraintBottom_toTopOf="@+id/dlogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slogin"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/light"
        android:gravity="center"
        android:text="@string/welcome"
        android:textColor="#000000"
        android:left="100dp"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="375dp"
        android:layout_height="502dp"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"

        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.198"
        app:srcCompat="@drawable/hello" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/slogin"
        android:layout_width="224dp"
        android:layout_height="65dp"
        android:layout_below="@id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="@string/parent_login"

        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:backgroundTint="#03A9F4"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:strokeColor="@color/white"
        app:strokeWidth="2sp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        android:layout_width="224dp"
        android:layout_height="65dp"
        android:layout_below="@id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="@string/student_login"


        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:backgroundTint="#03A9F4"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:strokeColor="@color/white"
        app:strokeWidth="2sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dlogin"
        android:layout_width="224dp"
        android:layout_height="65dp"
        android:layout_below="@id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/medium"
        android:gravity="center"

        android:text="@string/driver_login"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:backgroundTint="#72bcd4"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="2sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="48dp"
        android:layout_height="25dp"

        android:gravity="center"
        android:text="OR"
        android:textColor="#808080"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/dlogin"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3ss"
        app:layout_constraintTop_toBottomOf="@+id/slogin" />


</androidx.constraintlayout.widget.ConstraintLayout>