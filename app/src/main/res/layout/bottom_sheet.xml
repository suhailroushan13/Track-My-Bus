<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"


    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"


    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="61dp"
        android:layout_height="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_baseline_remove_24"

        android:clickable="true"

        android:focusable="true"
        android:foregroundGravity="center"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/textView11S4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/whatsappbtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView7"
        android:layout_alignParentRight="true"

        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/whatsapp"
        android:textColor="#25D366"
        app:icon="@drawable/whatsapp"
        app:iconSize="30dp"
        app:iconTint="#25D366"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894"
        app:strokeColor="#25D366"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/textView115"
        android:layout_width="100dp"
        android:layout_height="36dp"

        android:layout_below="@id/cardv"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/imageView7"
        android:layout_weight="2"
        android:fontFamily="@font/light"

        android:gravity="left"
        android:text="@string/driver"
        android:textColor="#011627"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/callbtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView7"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/call"
        android:textColor="@color/accent"
        app:icon="@drawable/calls"
        app:iconSize="30dp"
        app:iconTint="@color/colorAccent"

        app:strokeColor="@color/colorAccent"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="70dp"
        android:layout_margin="15dp"
        android:layout_height="70dp"
        android:layout_below="@id/cardv"
        android:layout_marginTop="10dp"
        android:background="@drawable/driversicon"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545" />


    <TextView
        android:id="@+id/busname"
        android:layout_width="wrap_content"
        android:layout_height="36dp"

        android:layout_marginStart="17dp"

        android:layout_below="@id/cardv"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/textView115"
        android:layout_weight="2"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="@string/naseer"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.768"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568"
        tools:ignore="RtlHardcoded"
        android:layout_marginLeft="20dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView9"
        android:layout_margin="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        app:barrierMargin="10dp"
        app:cardBackgroundColor="#fff"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView11s5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:layout_weight="2"
                android:fontFamily="@font/medium"
                android:gravity="left"
                android:text="Current Location:"
                android:textColor="#011627"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.048"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.098"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/buslocality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView11s5"
                android:layout_alignParentStart="true"
                android:layout_weight="2"

                android:fontFamily="@font/light"
                android:text="Fetching... "

                android:textColor="#011627"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.877"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.127"
                android:layout_alignParentLeft="true" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                app:backgroundTint="#fff"
                app:fabSize="mini"
                app:srcCompat="@drawable/sharp_refresh_black_36dp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView11S4"
        android:layout_width="117dp"
        android:layout_height="31dp"

        android:layout_below="@id/textView115"
        android:layout_toRightOf="@id/imageView7"
        android:layout_weight="2"
        android:fontFamily="@font/light"
        android:gravity="left"
        android:text="@string/numbernn"
        android:textColor="#000000"
        android:textSize="24sp"

        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/busnumber"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@id/busname"

        android:layout_toRightOf="@id/textView11S4"
        android:layout_weight="2"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="@string/_9966255198"
        android:textColor="#000000"
        android:textSize="24sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.713"
        tools:ignore="RtlHardcoded" />


</RelativeLayout>
