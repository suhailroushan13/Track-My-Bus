<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SplashScreen">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"

        android:layout_centerHorizontal="true"
        android:layout_marginEnd="30dp"

        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/medium"
        android:text="@string/lords"
        android:textColor="#000000"
        android:textSize="70sp"
        android:textStyle="bold"
        android:layout_below="@id/logo"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_below="@id/text1"
        android:fontFamily="@font/medium"
        android:text="@string/bus_app"
        android:textColor="#03A9F4"
        android:textSize="70sp"
        android:textStyle="bold"

        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="@string/powered_by_w8"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text1"
        app:layout_constraintVertical_bias="1.0" />
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_above="@id/text3"
        android:layout_height="wrap_content"
        android:id="@+id/roadimg"
        android:src="@drawable/road"
        android:layout_marginBottom="20dp"/>


    <ImageView
        android:id="@+id/busmain"
        android:layout_width="114dp"
        android:layout_height="48dp"

        android:layout_alignParentLeft="true"
        android:layout_above="@id/roadimg"
        app:srcCompat="@drawable/busmain"
        tools:targetApi="lollipop"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/signbrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_above="@id/roadimg"
        app:srcCompat="@drawable/signboard"
        tools:targetApi="lollipop"
/>
