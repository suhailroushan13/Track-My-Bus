<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".About">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:strokeColor="@color/maincolor"
        app:strokeWidth="10dp"
        android:background="@color/maincolor"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/maincolor"



        app:contentPadding="20dp"

        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"

            android:background="@color/maincolor">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:text="@string/about_us"
                android:fontFamily="@font/medium"
                android:textColor="@color/white"
                android:id="@+id/abtud"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/privacypolbtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textSize="15sp"
                app:strokeWidth="2dp"

                app:cornerRadius="7dp"
                android:gravity="center"

                app:strokeColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contactusbtn"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"


                android:layout_marginBottom="20dp"
                android:fontFamily="@font/medium"
                android:text="@string/privacy_policy"
                android:textColor="@color/white"
                app:icon="@drawable/ic_launcher" />

            <ImageView
                android:layout_width="200dp"
                android:id="@+id/abtlogo"
                android:layout_marginTop="10dp"
                android:layout_below="@id/abtud"
                android:layout_height="200dp"

                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/logoaa"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/abtlogo"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="-3dp"


                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView8"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/medium"
                android:layout_marginRight="2dp"
                android:text="It's An Application Which Tracks the Real Time Location of Your College Buses"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

<!--            Line -->
            <View
                android:layout_below="@id/tv111"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:id="@+id/sepratorabt"
                android:layout_marginTop="25dp"
                android:background="#C8D3D3D3"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                />
<!--                 Text Contact Us -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:id="@+id/contactusbtn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/contact_us"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/medium"
                app:strokeWidth="2dp"
                app:cornerRadius="7dp"
                android:shadowColor="@color/black"

                app:strokeColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_below="@id/sepratorabt"
                android:layout_margin="10dp"/>

<!--            Text Terms And Condition-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:id="@+id/termsbtn"
                android:fontFamily="@font/medium"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/terms_and_conditions"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:strokeWidth="2dp"
                app:cornerRadius="7dp"
                app:strokeColor="@color/white"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                app:icon="@drawable/terms_information_black_24dp"
                android:layout_below="@id/privacypolbtn"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>


<!--            Version Text-->
            <TextView
                android:id="@+id/versionabt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/termsbtn"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="67dp"
                android:fontFamily="@font/medium"
                android:text="@string/version_1_0"
                android:textColor="#FFFFFF" />


        </RelativeLayout>
















    </com.google.android.material.card.MaterialCardView>














</LinearLayout>

